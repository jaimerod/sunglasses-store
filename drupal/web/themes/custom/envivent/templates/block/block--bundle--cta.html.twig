{#
/**
 * @file
 * Default theme implementation to display a block.
 *
 * Available variables:
 * - plugin_id: The ID of the block implementation.
 * - label: The configured label of the block if visible.
 * - configuration: A list of the block's configuration values.
 *   - label: The configured label for the block.
 *   - label_display: The display settings for the label.
 *   - provider: The module or other provider that provided this block plugin.
 *   - Block plugin specific settings will also be stored here.
 * - content: The content of this block.
 * - attributes: array of HTML attributes populated by modules, intended to
 *   be added to the main container tag of this template.
 *   - id: A valid HTML ID and guaranteed unique.
 * - title_attributes: Same as attributes, except applied to the main title
 *   tag that appears in the template.
 * - title_prefix: Additional output populated by modules, intended to be
 *   displayed in front of the main title tag that appears in the template.
 * - title_suffix: Additional output populated by modules, intended to be
 *   displayed after the main title tag that appears in the template.
 *
 * @see template_preprocess_block()
 *
 * @ingroup themeable
 */
#}

{# debugging is easy #}
{#{ dd() }#}

{# Responsive values for all custom blocks #}
{% set uuid               = content['#block_content'].uuid.value %}
{% set css_classes        = content["#block_content"].field_css_classes.value %}
{% set css_id             = content["#block_content"].field_css_id.value|length ? content["#block_content"].field_css_id.value : 'uuid-' ~ uuid %}
{% set css_style_block    = content["#block_content"].field_css_style_block.value %}
{% set hide_on_mobile     = content["#block_content"].field_hide_on_mobile.value  ? "mobile-hide"  : "" %}
{% set hide_on_tablet     = content["#block_content"].field_hide_on_tablet.value  ? "tablet-hide"  : "" %}
{% set hide_on_desktop    = content["#block_content"].field_hide_on_desktop.value ? "desktop-hide" : "" %}

{# Responsive values for this custom block type #}
{% set image   = file_url(content['#block_content'].field_image|file_uri)|length > 1 ? file_url(content['#block_content'].field_image|file_uri) : "" %}
{% set link    = file_url(content['#block_content'].field_link|file_uri)|length > 1 ? file_url(content['#block_content'].field_link|file_uri) : "" %}
{% set heading = content["#block_content"].field_heading.value|raw %}
{% set body    = content["#block_content"].body.value|raw %}

{% set aos_anchor     = content['#block_content'].field_aos_anchor.value %}
{% set aos_animation  = content['#block_content'].field_aos_animation.value %}
{% set aos_duration   = content['#block_content'].field_aos_duration.value %}
{% set aos_easing     = content['#block_content'].field_aos_easing.value %}

{%
  set classes = [
    'block',
    'block--type--cta',
    'block--' ~ configuration.provider|clean_class,
    'block--' ~ plugin_id|clean_class,
    css_classes|clean_class,
    hide_on_mobile|clean_class,
    hide_on_tablet|clean_class,
    hide_on_desktop|clean_class
  ]
%}

<div{{attributes.addClass(classes).setAttribute('id', css_id).setAttribute('data-aos', aos_animation).setAttribute('data-aos-duration', aos_duration).setAttribute('data-aos-easing', aos_easing).setAttribute('data-aos-anchor-placement',aos_anchor)}}>
  {{ title_prefix }}
  <style>
    {% if css_style_block %}
      {{ css_style_block }}
    {% endif %}
  </style>

  {% if label %}
    <h2{{ title_attributes }}>{{ label }}</h2>
  {% endif %}
  {{ title_suffix }}
  {% block content %}
    {{ content.field_image }}

    {% if heading %}
      <h3>{{ heading|raw }}</h3>
    {% endif %}

    {% if body %}
      {{ body|raw }}
    {% endif %}

    <a class="button red" href="{{ content["#block_content"].field_link.0.url }}">{{ content["#block_content"].field_link.0.title }}</a>

  {% endblock %}
</div>
